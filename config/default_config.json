    "global": {
      "SWIPE_LEFT": {
        "type": "hotkey",
        "keys": [
          "ctrl",
          "left"
        ]
      },
      "SWIPE_RIGHT": {
        "type": "hotkey",
        "keys": [
          "ctrl",
          "tab",
          "right"
        ]
      },
      "__SCROLL_V__": {
        "type": "scroll_v",
        "amount": 10
      },
      "SWIPE_UP": {
        "type": "key",
        "key": "PageUp"
      },
      "SWIPE_DOWN": {
        "type": "key",
        "key": "PageDown"
      },
      "INDEX_MIDDLE_DOUBLE_CLICK": {
        "type": "double_click_left"
      },
      "PINCH_RIGHT_CLICK": {
        "type": "click_right"
      }
    },
    "per_app": {
      "POWERPNT.EXE": {
        "SWIPE_LEFT": {
          "type": "key",
          "key": "left"
        },
        "SWIPE_RIGHT": {
          "type": "key",
          "key": "right"
        }
      },
      "voidImageViewer.exe": {
        "FIST": {
          "type": "key",
          "key": "delete"
        },
        "SWIPE_LEFT": {
          "type": "key",
          "key": "left"
        },
        "SWIPE_RIGHT": {
          "type": "key",
          "key": "right"
        }
      },
      "firefox.exe": {
        "SWIPE_LEFT": {
          "type": "hotkey",
          "keys": [
            "ctrl",
            "PageUp"
          ]
        },
        "SWIPE_RIGHT": {
          "type": "hotkey",
          "keys": [
            "ctrl",
            "PageDown"
          ]
        },
        "INDEX_Z": {
          "type": "hotkey",
          "keys": [
            "ctrl",
            "w"
          ]
        }
      }
    }
